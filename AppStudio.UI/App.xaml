<Application
    x:Class="AppStudio.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:AppStudio.Controls"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone">

  <!--Application Resources-->
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Styles/AppStyles.xaml"/>
        <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section1.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View1Detail.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section2.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section3.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View2Detail.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section4.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View3Detail.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section5.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View4Detail.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section6.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View5Detail.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section7.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View6Detail.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section8.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View7Detail.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section9.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View8Detail.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section10.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section11.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View9Detail.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/Section12.xaml"/>
        <ResourceDictionary Source="Views/DataTemplates/View10Detail.xaml"/>
      </ResourceDictionary.MergedDictionaries>

            <sys:String x:Key="AppName">తెలుగు వార్తాపత్రిక</sys:String>
            <sys:String x:Key="AppTitle">తెలుగు వార్తాపత్రిక</sys:String>

      <commands:ActionCommands xmlns:commands="clr-namespace:AppStudio" x:Key="ActionCommands"/>
      <local:LocalizedStrings xmlns:local="clr-namespace:AppStudio.Resources" x:Key="LocalizedStrings"/>

      <!-- Converters -->
      <controls:MultilineConverter x:Key="MultilineConverter"/>
      <controls:TextPlainConverter x:Key="TextPlainConverter"/>
      <controls:ThumbnailConverter x:Key="ThumbnailConverter"/>
      <controls:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

      <!-- ImageButton Style -->
      <Style x:Key="ImageButtonStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="Button">
              <Grid Background="Transparent">
                <Border x:Name="ButtonBackground" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="0" Margin="{StaticResource PhoneTouchTargetOverhang}">
                  <ContentControl x:Name="ContentContainer" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Padding="{TemplateBinding Padding}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                </Border>
              </Grid>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </Application.Resources>

  <Application.ApplicationLifetimeObjects>
    <!--Required object that handles lifetime events for the application-->
    <shell:PhoneApplicationService
        Launching="Application_Launching" Closing="Application_Closing"
        Activated="Application_Activated" Deactivated="Application_Deactivated"/>
  </Application.ApplicationLifetimeObjects>
</Application>
